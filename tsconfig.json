{
  "compilerOptions": {
    "target": "ESNext",                                 
    "lib": ["ESNext", "DOM"],                                        
    "moduleResolution": "Node",                                
    "sourceMap": false,                   
    "resolveJsonModule": true,                    
    "module": "ESNext",                                
    "outDir": "./dist",                                  
    "esModuleInterop": true,                      
    "types": ["vite/client"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": ["./src"]
}
